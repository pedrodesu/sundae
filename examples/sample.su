func swap(a &mut i32, b &mut i32) {
    val c i32 = a
    a = b + 4
    b = c
}

const MAGIC_NUMBER i32 = 42

func op(a i32, b i32) i32 {
    if
        a < b
        {
        ret -a * b
    } else {
        ret (a + b) * 2
    }
}

// TODO as of now statements in if blocks need newlines which they shouldn't need (inline blocks?)

func main() {
    val a i32 = op(4, 10)
    val b i32

    b = MAGIC_NUMBER

    swap(a, b)

    putd(a)
    putd(b)
}
