    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sundae'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sundae",
                    "--package=sundae"
                ],
                "filter": {
                    "name": "sundae",
                    "kind": "bin"
                }
            },
            "args": [
                "examples/sample.su"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sundae'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sundae",
                    "--package=sundae"
                ],
                "filter": {
                    "name": "sundae",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'compiler-lexer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=compiler-lexer"
                ],
                "filter": {
                    "name": "compiler-lexer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'compiler-parser'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=compiler-parser"
                ],
                "filter": {
                    "name": "compiler-parser",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}